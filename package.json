{
  "name": "baby-git-gui",
  "version": "1.0.0",
  "description": "Baby Git GUI Tool",
  "main": "src/main.js",
  "author": "Joshua Tundag",
  "license": "ISC",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=\"development\" concurrently --kill-others \"webpack-dev-server --mode development --port 3000\" \"electron .\"",
    "build": "build --dir",
    "dist": "webpack --mode production && build"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "electron-notify": "^0.1.0",
    "firebase": "^4.12.1",
    "jquery": "^3.3.1",
    "lodash": "^4.17.5",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "react-redux": "^5.0.7",
    "react-toastify": "^3.4.3",
    "redux": "^3.7.2",
    "redux-promise": "^0.5.3",
    "rodal": "^1.6.3",
    "smalltalk": "^2.5.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "electron": "^1.8.4",
    "electron-builder": "^20.8.1",
    "electron-prebuilt": "^1.4.13",
    "electron-reload": "^1.2.2",
    "file-loader": "^1.1.11",
    "less": "^3.0.1",
    "less-loader": "^4.1.0",
    "node-sass": "^7.0.0",
    "sass-loader": "^6.0.7",
    "style-loader": "^0.20.3",
    "wait-on": "^2.1.0",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1"
  },
  "build": {
    "appId": "com.electron.bggui",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "portable"
    },
    "files": [
      "src/main.js",
      "dist/bundle.js",
      "public/*"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  }
}
